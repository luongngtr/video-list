<% if vid.id == vidchosenid.to_i %>
    <% myclass = "list-group-item list-group-item-action flex-column align-items-start active" %>
<% else %>
    <% myclass = "list-group-item list-group-item-action flex-column align-items-start" %>
<% end %>

<%= link_to(list_video_path(id: typechosenid, vid_id: vid.id), remote: true, class: myclass) do %>
    <div>
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1"><%= vid.name %></h5>
          <small><%= vid.updated_at %></small>
        </div>
        <p class="mb-1"><%= vid.description %></small>
    </div>
<% end %>

